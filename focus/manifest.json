{
  "manifest_version": 2,
  "name": "Focus",
  "version": "0.2",
  
  "description": "Blocks specified URLs",
  
  "icons": {
    "48": "icons/border-48.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
	  "strict_min_version": "56.0a1"
	}
  },
  
  "background": {
    "scripts": [
	  "background/focus.js"
	]
  },
  
  "options_ui": {
    "page": "options/options.html",
	"browser_style": true
  },
  
  "permissions": ["proxy", "storage", "<all_urls>"]
  
}